<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20241202000001-1" author="system">
        <comment>Add rms-service client ID and secret columns to tenants table</comment>
        
        <addColumn tableName="tenants">
            <column name="rms_service_client_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="rms_service_client_secret" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <rollback>
            <dropColumn tableName="tenants" columnName="rms_service_client_secret"/>
            <dropColumn tableName="tenants" columnName="rms_service_client_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>


<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add driver_type column to tenants table -->
    <changeSet id="20250107000002-1" author="system">
        <addColumn tableName="tenants">
            <column name="driver_type" type="varchar(20)" defaultValue="JDBC">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <comment>Add driver_type column to allow tenants to choose between JDBC and R2DBC</comment>
    </changeSet>

    <!-- Update existing tenants to have JDBC as default -->
    <changeSet id="20250107000002-2" author="system">
        <sql>
            UPDATE tenants SET driver_type = 'JDBC' WHERE driver_type IS NULL;
        </sql>
        
        <comment>Set default driver type to JDBC for existing tenants</comment>
    </changeSet>

</databaseChangeLog>


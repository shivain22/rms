# SSH Tunnel Configuration for RMS Application
# Copy this file to .env and update with your actual values

# SSH Server Configuration
SSH_TUNNEL_HOST=your-server.com
SSH_TUNNEL_USERNAME=your-username
SSH_TUNNEL_PORT=22

# Authentication (use either password OR private key)
SSH_TUNNEL_PASSWORD=your-password
# SSH_TUNNEL_PRIVATE_KEY=C:\Users\your-username\.ssh\id_rsa
# SSH_TUNNEL_PRIVATE_KEY_PASSPHRASE=your-key-passphrase

# Remote Service Ports (on the SSH server)
SSH_TUNNEL_POSTGRES_REMOTE_PORT=5435
SSH_TUNNEL_KAFKA_REMOTE_PORT=9295
SSH_TUNNEL_CONSUL_REMOTE_PORT=8500
SSH_TUNNEL_ELASTICSEARCH_REMOTE_PORT=9200
SSH_TUNNEL_KEYCLOAK_REMOTE_PORT=9292

# Local Ports (on your machine)
SSH_TUNNEL_POSTGRES_LOCAL_PORT=5433
SSH_TUNNEL_KAFKA_LOCAL_PORT=9092
SSH_TUNNEL_CONSUL_LOCAL_PORT=8500
SSH_TUNNEL_ELASTICSEARCH_LOCAL_PORT=9200
SSH_TUNNEL_KEYCLOAK_LOCAL_PORT=8080